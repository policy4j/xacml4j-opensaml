<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="idpMetadata" class="org.xacml4j.opensaml.OpenSamlMetadataFactoryBean">
		<property name="locations">
			<list>
				<value>classpath:metadata/**/idp*-metadata.xml</value>
				<value>classpath:metadata/**/sp*-metadata.xml</value>
			</list>
		</property>
	</bean>

	<bean id="idpConfig" class="org.xacml4j.opensaml.DefaultIDPConfiguration">
		<constructor-arg value="https://idp.example.com/"/>
		<constructor-arg ref="idpMetadata"/>
		<constructor-arg>
			<bean class="org.opensaml.xml.security.x509.KeyStoreX509CredentialAdapter">
				<constructor-arg>
					<bean class="org.xacml4j.opensaml.KeyStoreFactory"
						p:password="changeme"
						p:location="test-idp.jceks"
						p:type="JCEKS"
						/>
				</constructor-arg>
				<constructor-arg value="mykey"/>
				<constructor-arg value="changeme"/>
			</bean>
		</constructor-arg>
	</bean>
</beans>
